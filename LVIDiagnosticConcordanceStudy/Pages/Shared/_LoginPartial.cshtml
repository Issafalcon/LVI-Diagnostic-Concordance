@using Microsoft.AspNetCore.Identity
@using Areas.Identity.Data

@inject SignInManager<LVIStudyUser> SignInManager
@inject UserManager<LVIStudyUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="form-inline">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-dark nav-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-left">Register</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-left">Login</a></li>
}