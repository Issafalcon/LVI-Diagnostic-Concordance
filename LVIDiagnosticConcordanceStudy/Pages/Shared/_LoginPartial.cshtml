@using Microsoft.AspNetCore.Identity
@using Areas.Identity.Data

@inject SignInManager<LVIStudyUser> SignInManager
@inject UserManager<LVIStudyUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="form-inline ml-auto nav-item">
                 <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link nav-item" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                 <button type="submit" class="btn btn-light btn-sm mx-2">Logout</button>                 
    </form>
}
else
{
    <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-left">Register</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-left">Login</a></li>
}