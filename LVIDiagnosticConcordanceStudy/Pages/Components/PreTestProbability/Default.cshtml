@using LVIDiagnosticConcordanceStudy.Models.ViewComponents
@using Models
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model PreTestProbabilityViewComponent.PreTestProbability

@{
    int preTestPercentage = Convert.ToInt32(Model.PreTest * 100);
    string preTestBadgeClass = Model.PreTest < DataConstants.FiftyPercent ? "badge-danger" : "badge-success";
}

<button type="button" class="btn btn-secondary" title="@Localizer["LVI Probability"]" data-trigger="focus" data-container="body" data-toggle="popover" data-content="@Localizer["Pre-test_Probability_Tooltip"]">
    @Localizer["Pre-Test Probability"] <span class="badge @(preTestBadgeClass)">@(preTestPercentage.ToString())%</span>
</button>