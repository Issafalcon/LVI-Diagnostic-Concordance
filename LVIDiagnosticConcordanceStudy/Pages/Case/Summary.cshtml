@page
@model LVIDiagnosticConcordanceStudy.Pages.Case.SummaryModel
@{
}

<div class="row p-3 justify-content-center">
    <div class="card col-8">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Case #</th>
                    <th scope="col">Tumour Grade</th>
                    <th scope="col">Number of LVI</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int reportCount = 0;
                }

                @foreach(var item in Model.Cases)
                {
                    <tr>
                        <th scope="row"><a class="btn btn-secondary" asp-page="./Index" asp-route-id="@(item.Id)">@(item.Id)</a></th>
                        @if (Model.SubmittedReports.Contains(item.Id))
                        {
                            <td>@Model.Reports[reportCount].TumourGrade</td>
                            <td>@Model.Reports[reportCount].NumberofLVI</td>
                            @if (Model.Reports[reportCount].IsSubmitted)
                            {
                                <th scope="row" class="text-success">Submitted</th>
                            }
                            else
                            {
                                <th scope="row" class="text-primary">Incomplete</th>
                            }
                            reportCount++;
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                            <th scope="row" class="text-primary">Incomplete</th>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
